@model SistemaWebMisRecetas.Models.Receta

@{
    ViewData["Title"] = "Create";
}

<h1>Registrar una nueva receta</h1>
@using (Html.BeginForm("Create", "Recetas", FormMethod.Post))
{
    <p>
        @Html.LabelFor(model => model.Titulo)
        @Html.TextBoxFor(model => model.Titulo)
        @Html.ValidationMessageFor(model => model.Titulo)
    </p>
    <p>
        @Html.LabelFor(model => model.Categoria)
        @Html.TextBoxFor(model => model.Categoria)
        @Html.ValidationMessageFor(model => model.Categoria)
    </p>
    <p>
        @Html.LabelFor(model => model.Ingredientes)
        @Html.TextBoxFor(model => model.Ingredientes)
        @Html.ValidationMessageFor(model => model.Ingredientes)
    </p>
    <p>
        @Html.LabelFor(model => model.Instrucciones)
        @Html.TextBoxFor(model => model.Instrucciones)
        @Html.ValidationMessageFor(model => model.Instrucciones)
    </p>
     <p>
        @Html.LabelFor(model => model.Nombre)
        @Html.TextBoxFor(model => model.Nombre)
        @Html.ValidationMessageFor(model => model.Nombre)
      </p>
     <p>
        @Html.LabelFor(model => model.Apellido)
        @Html.TextBoxFor(model => model.Apellido)
        @Html.ValidationMessageFor(model => model.Apellido)
    </p>
    <p>
        @Html.LabelFor(model => model.Edad)
        @Html.TextBoxFor(model => model.Edad)
        @Html.ValidationMessageFor(model => model.Edad)
    </p>
    <p>
        @Html.LabelFor(model => model.Email)
        @Html.TextBoxFor(model => model.Email)
        @Html.ValidationMessageFor(model => model.Email)
    </p>
     
    <input type="submit" action="Create" />
    @Html.ActionLink("Volver al Index", "Index", "Recetas")
}
@section SideBarOpcional{
    <div class="container">
        <ul>
          
                <li>
                    @Html.ActionLink("Nueva receta", "Create", "Recetas")
                </li>
                <li>
                     @Html.ActionLink("Recetas", "Index", "Recetas")
                </li>
                <li>
                    @Html.ActionLink("Volver a Home", "Index", "Home")
                </li>
        </ul>
    </div>
            
    }



